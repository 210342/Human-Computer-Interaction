<Window x:Class="XAML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
        xmlns:local="clr-namespace:XAML"
        mc:Ignorable="d"
        Title="Wydawnictwa" Height="512" Width="1024">

    <Window.DataContext>
        <viewModel:MainWindowViewModel />
    </Window.DataContext>

    <Grid>
        <Button Command="{Binding Path=SaveToFileCommand}" Content="Choose XML file"
             HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="10,10,0,0"  Width="125"/>
        <Button Command="{Binding Path=LoadFromFileCommand}" Content="Load from file"
             HorizontalAlignment="Left" VerticalAlignment="Bottom"
                Margin="10,0,0,10" Width="125" Height="20" />
    </Grid>
</Window>
